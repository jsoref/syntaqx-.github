<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/" xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>${project}</ShortName>
  <Description>Search ${project}</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">https://${domain}/favicon.ico</Image>
  <Url type="text/html" method="get" template="https://placeholder.domain?q={searchTerms}&ref=opensearch" />
  <moz:SearchForm>https://${domain}/search</moz:SearchForm>
  <moz:browser Update="https://placeholder.domain/opensearch.xml" updateCheckDays="1" />
</OpenSearchDescription>
