# editorconfig - helps maintains consistent coding styles across workstations.
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 120
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash,env,envrc}]
indent_size = 2

[*.{css,html,js,json,scss,svg,xml,yaml,yml}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[*.go]
indent_style = tab

[*.py]
indent_size = 4

[{Makefile,makefile,GNUmakefile}]
indent_style = tab

[*.md]
# Markdown uses the trailing whitespaces
# https://daringfireball.net/projects/markdown/syntax#block
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
